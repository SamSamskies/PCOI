<tr class="head">
	<th>Need</th>
	<th>Job Title</th>
	<th>Country</th>
	<th>Departure Date</th>
	<th></th>
</tr>
<% filtered_jobs.each do |job| %>
  <tr>
    <td><%= "#{job.need}" %></td>
    <td class="job_title"><%= "#{job.title}" %></td>
    <td><%= "#{job.country.try(:name)}" %></td>
    <td><%= "#{prettify_date(job.departure_date)}" %></td>
    <td><button class="actions btn btn-primary" data-toggle="modal" data-target="#myModal" data-id="<%= job.id %>">View Details and Apply</button></td>
    <!--<td><button class="actions btn btn-primary" data-id="<%= job.id %>">View Details and Apply</button></td>-->
  </tr>
<% end %>

